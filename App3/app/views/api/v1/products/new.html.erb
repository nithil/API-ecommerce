<h2>New Product</h2>
<%# binding.pry %>
<%= form_for @product do |p| %>
	<%= p.label :name %>
	<%= p.text_field :name %><br><br>

	<%= p.label :price %>
	<%= p.text_field :price %><br><br>

	<%= p.label :category %>
	<%= p.select :category_id, options_for_select(@categories.collect {|p| [p["name"],p["id"]] }), prompt: "Select category" %><br><br>

	<%= p.submit %>
<% end %>