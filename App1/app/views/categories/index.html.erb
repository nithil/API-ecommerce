<p id="notice"><%= notice %></p>

<h2>Listing Categories</h2>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= link_to category["name"], category_path(category["id"]) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
