<h2><font color="blue"> Listing Products</font></h2>
<% if @products.empty? %>
	<p>No products found</p>
<% else %>	
	<table border="1">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
	<% @products.each do |product| %>
		<tr>
			<td><%= link_to product["name"], product_path(product["id"]) %></td> 
			<td><%= product["price"] %></td>

		</tr>	
	<% end %>
	</tbody>
	</table>
<% end %>